  "description": "My app description",
  "scripts": {
    "start": "npm-run-all -p watch:* server",
    "build": "npm-run-all build:*",
    "test": "mocha",
    "build:css": "node-sass-chokidar front/scss/ -o public/css/",
    "watch:css": "node-sass-chokidar front/scss/ -o public/css/ --watch --recursive",
    "deploy": "npm test && git push heroku master",
    "postinstall": "npm run build",
    "server": "npm run clean && npm run build:css && node index.js",
    "clean": "rimraf ./public/css/*"
  },
